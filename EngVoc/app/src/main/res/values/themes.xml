<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EngVoc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#a4d4c4</item>
        <item name="colorPrimaryVariant">#d2eae2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name = "android:textViewStyle">@style/TextViewStyle</item>
        <item name = "android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:fontFamily">@font/maplestorylight</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>
    <style name="TextViewStyle" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/maplestorylight</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/maplestorylight</item>
    </style>




</resources>